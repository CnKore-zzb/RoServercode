#!/usr/bin/env php
<?php
# 只作为集群注册服务器启动

error_reporting(E_ALL ^ E_NOTICE);
date_default_timezone_set('PRC');


$shortOpts = '';
$shortOpts .= 'h:';     // -h 0.0.0.0
$shortOpts .= 'p:';     // -p 1310
$shortOpts .= 'k:';     // -k abcdef
$shortOpts .= 'l:';     // -l /var/log/register-serer.log
$shortOpts .= 'vhd';    // -v debug模式.  -h : 帮助.  -d: 守护进程化

$longOpts = [
    'help',     // --help
];

$option = getopt($shortOpts, $longOpts);

# 配置
$config = [
    'hosts' => [
        'Main' => [
            'type'  => 'tcp',
            'host'  => $option['h'] ?: '0.0.0.0',
            'port'  => $option['p'] ?: 1310,
            'class' => '\\MyQEE\\Server\\Register\\WorkerMain',
        ],
    ],
    'server' => [
        'mode'     => 'base',
    ],
    'clusters' => [
        'mode' => 'none'
    ],
    'log' => [
        'level' => ['info', 'warn'],
    ],
    'swoole' => [
        'worker_num'               => 3,
        'max_request'              => 0,
        'task_worker_num'          => 0,
        'open_eof_check'           => true,
        'open_eof_split'           => true,
        'package_eof'              => "\r\n",
        'heartbeat_idle_time'      => 300,
        'heartbeat_check_interval' => 60,
    ],
];

require __DIR__ .'/../../../autoload.php';
use MyQEE\Server\Server;
use MyQEE\Server\Clusters\Host;
use MyQEE\Server\Register\RPC;

if (!function_exists('\\msgpack_pack'))
{
    Server::$instance->warn('开启集群模式必须安装 msgpack 插件');
    exit;
}

$server = new Server($config);

# 初始化HOST中数据
Host::init(true);

if (isset($option['k']) && $option['k'])
{
    RPC::$RPC_KEY = $option['k'];
}

$server->start();
